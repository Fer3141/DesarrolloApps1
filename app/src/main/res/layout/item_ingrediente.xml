<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <EditText
        android:id="@+id/inputNombreIngrediente"
        android:hint="Ingrediente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/inputCantidadIngrediente"
        android:hint="Cantidad"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/inputUnidadIngrediente"
        android:hint="Unidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/inputObsIngrediente"
        android:hint="Observaciones (opcional)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

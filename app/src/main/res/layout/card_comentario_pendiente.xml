<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tvNombreReceta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receta: Pastel de papa"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comentario pendiente..."
        android:layout_marginTop="4dp"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="end">

        <Button
            android:id="@+id/btnAprobarComentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aprobar"
            android:backgroundTint="#C8E6C9"
            android:textColor="#2E7D32" />

        <Button
            android:id="@+id/btnRechazarComentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rechazar"
            android:backgroundTint="#FFCDD2"
            android:textColor="#C62828"
            android:layout_marginStart="12dp" />
    </LinearLayout>
</LinearLayout>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/adminLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tituloAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panel de Administración"
            android:textSize="22sp"
            android:textColor="#E68523"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnCrearCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Crear Curso"
            android:backgroundTint="#FFF5E9"
            android:textColor="#E68523"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCrearSede"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Crear Sede"
            android:backgroundTint="#FFF5E9"
            android:textColor="#E68523"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCrearCronograma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Crear Cronograma"
            android:backgroundTint="#FFF5E9"
            android:textColor="#E68523"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recetas pendientes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E68523"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRecetasPendientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentarios pendientes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E68523"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerComentariosPendientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFA726"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</ScrollView>
